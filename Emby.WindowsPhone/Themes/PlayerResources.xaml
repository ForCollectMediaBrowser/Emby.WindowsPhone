                        <Setter.Value>
                            <ControlTemplate TargetType="Thumb">
                                <Border Background="White"
                                        CornerRadius="10"
                                        Height="20"
                                        Width="20"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}" />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
