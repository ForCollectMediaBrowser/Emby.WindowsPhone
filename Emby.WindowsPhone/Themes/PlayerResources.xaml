                              Margin="{TemplateBinding Padding}"
                              RenderTransformOrigin=".5,.5"
                              Visibility="Collapsed">
                            <Path x:Name="path"
                                  Data="M44.751,5.181 C60.0166,8.30475 71.5,21.8116 71.5,38.0003 C71.5,42.6257 70.5626,47.0321 68.8674,51.04 M65.779,56.73 C59.7587,65.6412 49.5635,71.5 38,71.5 C26.4365,71.5 16.2412,65.6412 10.221,56.73 M7.13259,51.04 C5.4374,47.0321 4.5,42.6256 4.5,38.0002 C4.5,19.4986 19.4985,4.5 38,4.5"
                                  Height="76"
                                  Stretch="Fill"
                                  StrokeThickness="9"
                                  UseLayoutRounding="False"
                                  VerticalAlignment="Center"
                                  Opacity="1"
                                  RenderTransformOrigin="0.5,0.5"
                                  Stroke="#BBFFFFFF"
                                  Width="76"
                                  HorizontalAlignment="Center">
                                <Path.RenderTransform>
                                    <CompositeTransform ScaleY="0.5"
                                                        ScaleX="0.5" />
                                </Path.RenderTransform>
                            </Path>
                            <Path x:Name="path1"
                                  Data="M44.751,5.181 C60.0166,8.30475 71.5,21.8116 71.5,38.0003 C71.5,42.6257 70.5626,47.0321 68.8674,51.04 M65.779,56.73 C59.7587,65.6412 49.5635,71.5 38,71.5 C26.4365,71.5 16.2412,65.6412 10.221,56.73 M7.13259,51.04 C5.4374,47.0321 4.5,42.6256 4.5,38.0002 C4.5,19.4986 19.4985,4.5 38,4.5"
                                  Height="76"
                                  Stretch="Fill"
                                  StrokeThickness="9"
                                  UseLayoutRounding="False"
                                  VerticalAlignment="Center"
                                  Opacity="0.8"
                                  RenderTransformOrigin="0.5,0.5"
                                  Stroke="{TemplateBinding Foreground}"
                                  Width="76"
                                  HorizontalAlignment="Center">
                                <Path.RenderTransform>
                                    <CompositeTransform   ScaleX="0.7"
                                                          ScaleY="0.7"
                                                          Rotation="-60" />
                                </Path.RenderTransform>
                            </Path>
                            <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="#BBFFFFFF"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource SubheaderTextBlockStyle}" />
                        </Grid   >
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



