<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Target Name="CheckAnyCPU" Condition="('$(Platform)' != 'x86') AND ('$(Platform)' != 'ARM')" BeforeTargets="BeforeBuild">
		<Error Text="Because of the new PhoneSM dlls, you can't have AnyCPU anymore" />
	</Target>

	<ItemGroup Condition=" '$(MSBuildProjectExtension)' == '.csproj' Or '$(MSBuildProjectExtension)' == '.vbproj' ">
		<Reference Include="SM.Media.Platform.WP8">
			<HintPath>$(SolutionDir)\other-packages\HLS\$(Platform)\SM.Media.Platform.WP8.dll</HintPath>				
		</Reference>
	</ItemGroup>
  
</Project>
